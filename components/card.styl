//- Card styling

.card
  padding: 24px 20px
  position: relative
  background: $card-yellow
  border: 1px solid $grey-drk
  border-bottom: 12px solid $grey-drk

  &.hidden
    display: none

  h2
    margin-bottom: 5px
    padding-bottom: 5px
    border-bottom: 7px solid $grey-drk
    font-size: 22px

  .year
    margin-bottom: 20px
    font-size: 12px
    text-align: right

  .difference

    span:first-child
      font-size: 56px
      font-weight: $font-weight-bold
      font-family: $font-helvetica

    span:nth-child(2)
      margin-bottom: 40px
      display: inline-block
      position: relative
      top: -3px
      left: 6px
      font-size: 18px
      font-weight: $font-weight-normal
      font-family: $font-proxima

  $graph-pos-18 = 0
  $graph-pos-30 = calc(19.3548% - 1px)
  $graph-pos-40 = calc(35.4838% - 1px)
  $graph-pos-50 = calc(51.6128% - 1px)
  $graph-pos-60 = calc(67.7418% - 1px)
  $graph-pos-70 = calc(83.8708% - 1px)
  $graph-pos-80 = 100%

  .graph
    height: 2px
    margin-bottom: 50px
    position: relative
    background: #c9ca9d

    span
      width: 2px
      height: 16px
      display: block
      position: absolute
      top: -(@height/2)
      background: #c9ca9d
      border-radius: 2px

      &:before
        position: absolute
        bottom: -18px
        left: -6px
        font-size: 12px
        color: black(.3)

      &:first-of-type
        left: $graph-pos-18
        &:before
          content: '18'
          left: -4px
      &:nth-of-type(2)
        left: $graph-pos-30
        &:before
          content: '30'
      &:nth-of-type(3)
        left: $graph-pos-50
        &:before
          content:'50'
      &:last-of-type
        left: $graph-pos-80
        &:before
          content: '80'

    .marker
      width: 20px
      height: 20px
      position: absolute
      top: -10px
      border: 3px solid white
      margin-left: -10px
      border-radius: 50%
      box-shadow: 3px 3px 0 black(.2)

      &.woman
        background: $marker-pink
      &.man
        background: $marker-blue

  .actor
    margin-bottom: 6px
    padding: 8px 0
    padding-left: 40px
    position: relative

    .age
      width: 30px
      height: 30px
      padding-top: 5px
      position: absolute
      left: 0
      top: 0
      background: white
      border: 3px solid
      border-radius: 50%
      text-align: center
      font-size: 15px
      font-weight: $font-weight-medium

    &.woman .age
      color: $marker-pink
      border-color: $marker-pink
    &.man .age
      color: $marker-blue
      border-color: $marker-blue

.social-container
  position: absolute
  right: 10px
  bottom: 10px

  a
    width: 21px
    height: 15px
    display: inline-block
    background: no-repeat center center
    background-size: auto @height
    text-indent: -9999em
    opacity: .4
    cursor: pointer

    &.twitter
      background-image: url('/images/logo-twitter.svg')

    &:hover
      opacity: .8

.card-contribute
  min-height: 200px
  padding: 0
  background: $gradient-purple

  a
    height: 100%
    padding: 50px 20px
    position: relative
    background-color: black(.4)
    color: white
    transition: background-color .2s ease-in

    &:hover
      background-color: black(.1)

    & > span
      text-align: center
      font-size: 18px

    .cta
      width: 100%
      margin-top: 15px
      padding-bottom: 60px
      display: inline-block
      position: relative
      font-size: 30px

      &:after
        width: 40px
        height: 40px
        margin-left: -20px
        padding-top: 4px
        position: absolute
        bottom: 0
        left: 50%
        border: 2px solid white(.5)
        border-radius: 50%
        content: '+'
        font-size: 30px
        font-weight: $font-weight-bold
        text-align: center

@media screen and (max-width: $bp-small)

  .card-contribute

    a, a span
      width: 100%
      display: block

@media screen and (min-width: $bp-small + 1)

  .movie-list
    display: flex
    flex-wrap: wrap
    align-items: stretch

  .card-contribute
    flex: auto

    a
      display: flex
      align-items: center
      justify-content: center

@media screen and (min-width: $bp-small + 1) and (max-width: $bp-med)

  .card
    width: 50%

@media screen and (min-width: $bp-med + 1) and (max-width: $bp-large)

  .card
    width: 33.333%

@media screen and (min-width: $bp-large + 1) and (max-width: $bp-xlarge)

  .card
    width: 25%

@media screen and (min-width: $bp-xlarge + 1)

  .card
    width: 20%
